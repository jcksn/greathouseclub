<div class="page-header">
  <h1>Conversation with <%= @user.name == "" ?  number_to_phone(@user.phone) : @user.name %></h1>
</div>

<div class="conversation">
  <% @messages.each do |message| %>
    <div class="message <%= message.from == @user.phone ? 'from' : 'to' %>">
      <p>
        <%= message.body %>
      </p>
    </div>
  <% end %>
</div>

<div class="container" id="reply">
  <%= simple_form_for [@user, @message], html: { class: 'form-horizontal'}, remote: true do |f| %>
    <%= f.input :body, label: false, as: :string %>
    <%= f.button :submit, class: "input-group-btn" %>
  <% end %>
</div>
